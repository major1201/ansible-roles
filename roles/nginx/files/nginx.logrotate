/var/log/nginx/access.log {
    daily
    rotate 180
    nocompress
    missingok
    postrotate
        [ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`
    endscript
}

/var/log/nginx/error.log {
    daily
    rotate 180
    nocompress
    missingok
    postrotate
        [ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`
    endscript
}
